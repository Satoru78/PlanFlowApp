<Page x:Class="PlanFlowApp.Views.Pages.PlanPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PlanFlowApp.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="План">

  

<Border Margin="10"
        Padding="20"
        Background="White"
        CornerRadius="10"
        BorderBrush="#DDD"
        BorderThickness="1"
        SnapsToDevicePixels="True">

    <DockPanel LastChildFill="True">

        <!-- Заголовок -->
        <TextBlock Text="План операций"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0 0 0 10"
                   DockPanel.Dock="Top"
                   HorizontalAlignment="Left"
                   Width="200"/>

        <!-- Кнопка импорта -->
        <Button Content="📥 Импорт из Excel"                  
         Name="ImportBtn"
         DockPanel.Dock="Bottom"
         Click="ImportBtn_Click"
         HorizontalAlignment="Right"
         Background="#FF4CAF50"
         Foreground="White"
         FontWeight="SemiBold"
         FontSize="14"    
         Cursor="Hand"
         Width="150"
         Height="35"
         Margin="0,5,0,0"/>

        <!-- Таблица -->
            <DataGrid x:Name="OperationsDataGrid" 
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      RowHeaderWidth="0"
                      HeadersVisibility="Column"
                      Margin="0 0 0 10"
                      ColumnWidth="*"
                      AlternatingRowBackground="#FAFAFA"
                      GridLinesVisibility="Horizontal"
                      MouseDoubleClick="OperationsDataGrid_MouseDoubleClick"
                      ItemsSource="{Binding}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Обозначение" Binding="{Binding DetailCode}" Width="*" />
                    <DataGridTextColumn Header="Наименование" Binding="{Binding DetailTitle}" Width="*" />
                    <DataGridTextColumn Header="Операция" Binding="{Binding TypeOperationTitle}" Width="120" />
                    <DataGridTextColumn Header="Время (мин)" Binding="{Binding EstimatedTime}" Width="50" />
                    <DataGridTextColumn Header="Количество"  Binding="{Binding Quantity}" Width="50" />
                    <DataGridTextColumn Header="Выполнено" Binding="{Binding DoneQuantity}" Width="50" />
                    <DataGridTemplateColumn Header="Изменить">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding DoneQuantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="60"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Статус" Binding="{Binding StatusTitle}" Width="70">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding StatusTitle}" Value="Выполнено">
                                        <Setter Property="Background" Value="Green"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding StatusTitle}" Value="В процессе">
                                        <Setter Property="Background" Value="Goldenrod"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding StatusTitle}" Value="Задерживается">
                                        <Setter Property="Background" Value="Red"/>
                                    </DataTrigger>
                                    <!-- остальные без цвета -->
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Исполнитель" Binding="{Binding AssignedWorkerName}" Width="150" />
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
    </Border>
</Page>