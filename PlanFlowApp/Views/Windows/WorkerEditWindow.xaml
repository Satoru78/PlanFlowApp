<Window x:Class="PlanFlowApp.Views.Windows.WorkerEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlanFlowApp.Views.Windows"
        mc:Ignorable="d"
        Title="Редактирование"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Height="210" Width="350">
    <Grid>
        <Border Padding="16" Background="White">
            <StackPanel>
                <TextBlock Text="Имя" Margin="0,0,0,6"/>
                <TextBox Text="{Binding FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Text="Фамилия" Margin="0,8,0,6"/>
                <TextBox Text="{Binding LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,25,0,0">
                    <Button Content="Сохранить"
                            Width="100" 
                            Name="SaveWorkerBtn"
                            Margin="0,0,10,0"
                            Height="25"
                            Style="{StaticResource BasicButtonBlue}"
                            Click="SaveWorkerBtn_Click"/>
                    <Button Content="Отмена" 
                            Name="CancelBtn"
                            Width="100" 
                            Height="25"
                            Style="{StaticResource BasicButtonGray}"
                            Click="CancelBtn_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
