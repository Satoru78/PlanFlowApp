<Window x:Class="PlanFlowApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlanFlowApp"
        mc:Ignorable="d"
        ResizeMode="CanResizeWithGrip"
        Title="MainWindow" Height="600" Width="1000">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Background="#2D2F31" Padding="10">
                <StackPanel>
                    <TextBlock Text="PlanFlow" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0 0 0 20"/>

                    <Button Content="📋 План"
                            Style="{StaticResource MenuButton}"
                            Name="PlanBtn"
                            Click="PlanBtn_Click"/>
                    <Button Content="🧩 Назначения"
                            Style="{StaticResource MenuButton}" 
                            Name="AssignmentsBtn"
                            Click="AssignmentsBtn_Click"/>
                    <Button Content="👥 Сотрудники"
                            Style="{StaticResource MenuButton}"
                            Name="WorkersBtn"
                            Click="WorkersBtn_Click"/>
                    <Button Content="⚙️ Настройки"
                            Style="{StaticResource MenuButton}"
                            Name="SettingsBtn"
                            Click="SettingsBtn_Click"/>
                </StackPanel>
            </Border>

            <!-- Контент -->
            <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>
