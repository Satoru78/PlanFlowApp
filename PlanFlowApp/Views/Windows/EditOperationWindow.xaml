<Window x:Class="PlanFlowApp.Views.Windows.EditOperationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlanFlowApp.Views.Windows"
        mc:Ignorable="d"
        Title="Редактировать"  Height="340" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Closing="Window_Closing">
    <Border Background="White" Padding="20" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Grid.Row="0" Text="Редактирование операции"
                       FontSize="18" FontWeight="Bold" Margin="0 0 0 10"/>

            
            
            <!-- Информация о детали -->
            <StackPanel Grid.Row="1" Margin="0 0 0 10">
                <TextBlock Text="{Binding DetailTitle}" FontWeight="Bold" FontSize="14"/>
                <TextBlock Text="{Binding TypeOperationTitle}" FontStyle="Italic" FontSize="12"/>
                <TextBlock>
                    <Run Text="Исполнитель: "/>
                    <Run Text="{Binding AssignedWorkerName, Mode=OneWay}" FontWeight="SemiBold"/>
                </TextBlock>
            </StackPanel>

            <!-- Основной блок -->
            <StackPanel Grid.Row="2" Margin="0 0 0 10" Orientation="Vertical" VerticalAlignment="Top">
                <!-- Редактируемые поля -->
                <UniformGrid Columns="2" Margin="0 0 0 10" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                    <StackPanel Margin="0 0 10 0">
                        <TextBlock Text="Выдано:" FontWeight="SemiBold" Margin="0 0 0 4"/>
                        <TextBox Text="{Binding Issued, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Height="25" Padding="4"/>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Сделано:" FontWeight="SemiBold" Margin="0 0 0 4"/>
                        <TextBox Text="{Binding Done, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Height="25" Padding="4"/>
                    </StackPanel>
                </UniformGrid>

                <Separator Margin="0 8"/>

                <!-- Вычисляемые поля -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Осталось:" FontSize="15" Margin="0 0 0 4"/>
                    <TextBlock Text="{Binding Remaining}" FontSize="15" FontWeight="Bold" Margin="0 0 0 8"/>
                    
                    <TextBlock Text="Браковано:" FontSize="15" HorizontalAlignment="Right"  Margin="120 0 0 4"/>
                    <TextBlock Text="{Binding Rejected}" FontSize="15" HorizontalAlignment="Right" FontWeight="Bold" Margin="0 0 0 8"/>

                    <!--<TextBlock Text="Прогресс:" Margin="0 0 0 4"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <ProgressBar Height="20" Minimum="0" Maximum="100"
                         Value="{Binding Progress, Mode=OneWay}"  Width="200" Margin="0 0 8 0"/>
                        <TextBlock Text="{Binding Progress, Mode=OneWay, StringFormat={}{0}%}" FontWeight="Bold" Width="40"/>
                    </StackPanel>-->
                </StackPanel>
            </StackPanel>

            <!-- Кнопки -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
                <Button Content="Сохранить" 
                        Width="100" 
                        Margin="0 0 10 0"
                        Height="35"                    
                        HorizontalAlignment="Right"
                        Background="#007ACC"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Padding="8,4"
                        Click="Save_Click"/>
                <Button Content="Отмена"
                        HorizontalAlignment="Right"
                        Background="#E0E0E0" 
                        Foreground="Black"
                        BorderBrush="#BDBDBD"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Padding="8,4"
                        Width="100"
                        Height="35"
                        Click="Cancel_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

